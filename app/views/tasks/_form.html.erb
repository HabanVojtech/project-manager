<%= form_for @task, :url => {:action => :create, :id => @project.id,:user_id => current_user.id} do |form| %>

 <%= form.hidden_field :project_id%>

 <%= form.hidden_field :user_id ,:value => current_user.id%>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label :is_done %><br>
    <%= form.check_box :is_done %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>