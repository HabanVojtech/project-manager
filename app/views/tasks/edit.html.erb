<br>
<%= simple_form_for @task do |form| %>

 <%= form.hidden_field :project_id%>

 <%= form.hidden_field :user_id ,:value => current_user.id%>
  <div class="field">
    <%= form.input:title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <br>
    <%= form.text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label :is_done %><br>
    <%= form.check_box :is_done %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>


  <div class="actions">
    <%= form.submit t("task.Update")%>
  </div>
<% end %>

<%= link_to t("global.Show"), @task %> |
<%= link_to t("global.Back"), tasks_path %>
