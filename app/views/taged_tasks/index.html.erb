<p id="notice"><%= notice %></p>
<h1><%= t("global.Tasks/Tags")%></h1>

<table>
  <thead>
    <tr>
      <th><%= t("tagedtask.Task")%></th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taged_tasks.each do |taged_task| %>
      <tr>
        <% if taged_task.task.user_id == current_user.id %>
        <td><%= taged_task.task.title %></td>
        <td><%= taged_task.tag.title %></td>
        <td><%= link_to t("global.Show"), taged_task %></td>
        <td><%= link_to t("global.Edit"), edit_taged_task_path(taged_task) %></td>
        <td><%= link_to t("global.Destroy"), taged_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <%end%>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("tagedtask.New_taged_task"), new_taged_task_path,class: 'btn btn-primary' %>
