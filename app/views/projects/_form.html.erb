<%= simple_form_for @project do |form| %>
            <%= form.hidden_field :user_id %>
	<div>
            <%= form.input :title%>
            <% @project.errors.full_messages_for(:title).each do |message| %>
              <div><%= message%></div>
            <% end %>
	</div>
	
	<div> 
            <%= form.input:position%>
            <% @project.errors.full_messages_for(:position).each do |message| %>
              <div><%= message%></div>
            <% end %>
	</div>

        <br>
	<div>
            <%= form.submit t("project.New_project")%>
	</div>
<% end %>
